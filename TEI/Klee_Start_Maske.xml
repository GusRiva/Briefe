<TEI xmlns="http://www.tei-c.org/ns/1.0" xmlns:hei="https://digi.ub.uni-heidelberg.de/schema/tei/heiEDITIONS" ana="klee_fw" xml:id="fds3">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title><!--Titel: Zur Orientierung steht hier die Titelzeile des Briefes. Angabe wird später mit DWork Metadaten überschrieben--></title>
            </titleStmt>
            <publicationStmt>
                <p>Publication Information</p>
            </publicationStmt>
            <sourceDesc>
                <msDesc>
                    <msIdentifier>
                        <settlement>Hinterkappelen</settlement>
                    </msIdentifier>
                </msDesc>
            </sourceDesc>
        </fileDesc>
    </teiHeader>
    <facsimile>
        <surface ana="hc:Page" xml:id="!!Projektname_Seitenname!!" n="!!DWork Seitenname!!">
            <!--belegen mit @ana und dem Wert (meist hc:Page), @xml:id für das spezifische Projekt und @n für die Seitennummerierung (DWork Seitenname)-->
            <graphic url="URL zum Digitalisat" mimeType="image/*"/>
            <!--als Wert die URL der Seite eingeben-->
            <!-- zone: für jeden Inhaltsbereich wird innerhalb von surface ein Element <zone> angelegt. Das Element <zone> wird auch verwendet um Inhaltsbereiche zu gruppieren und so deren Anordnung zu bestimmen -->
            <zone ana="hc:HorizontalLayout"> <zone ana="hc:MainColumn hc:TextZone" xml:id="!!Projektname_Seitenname-Spaltenangabe!!" n="!!Spaltenangabe!!"/>
                <!--belegen mit @ana und entsprechendem Wert (meist hc:Column), @xml:id für das spezifische Projekt und @n für die Spaltenangabe (z.B Kleinbuchstaben)--> <zone ana="hc:MarginalZone hc:TextZone" xml:id="!!Projektname_Seitenname-Spaltenangabe!!" n="!!Spaltenangabe!!"/>
                <!-- am @rendition kann die Platzierung eine Textzone für die Visualiserung angegeben werden; @hei:width für die prozentuale Angabe einer Zone zur Seite ; @rotate für die Angabe der Abweichung Textausrichtung in Grad --> </zone>
        </surface>
        <surface ana="hc:Page" xml:id="" n="">
            <graphic url="URL zum Digitalisat" mimeType="image/*"/>
            <zone ana="hc:TextZone hc:MarginalZone" xml:id="" n=""/>
        </surface>
    </facsimile>
    <!-- text belegen mit @ana und dem Wert für den Status (meist hc:CompleteExpression) und dem Wert für die Gattung (meist hc:Letter oder hc:Postcard)-->
    <text ana="hc:CompleteExpression hc:Letter">
        <body>
            
            
        </body>
    </text>
